<echo>ParDeploymentStatus currently: ${status} </echo> -->

<jmxInvoke
    name="${appTelemetricsName}"
    operation="parDeployForwardNotDirty"
    echo="true"
    delimiter=" "
    failOnError="true"
    ref="tomcat1">
    
    <arg value="true" type="boolean"/>
</jmxInvoke> 

  </target>
</project>
