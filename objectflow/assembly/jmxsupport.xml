<project name="MowareJmxSupport" default="default">      
  
<typedef
    name="jmxOpen"
    classname="org.apache.catalina.ant.jmx.JMXAccessorTask" />
<typedef
    name="jmxSet"
    classname="org.apache.catalina.ant.jmx.JMXAccessorSetTask" />
<typedef
    name="jmxGet"
    classname="org.apache.catalina.ant.jmx.JMXAccessorGetTask" />
<typedef
    name="jmxInvoke"
    classname="org.apache.catalina.ant.jmx.JMXAccessorInvokeTask" />
<typedef
    name="jmxQuery"
    classname="org.apache.catalina.ant.jmx.JMXAccessorQueryTask" />
<typedef
    name="jmxCreate"
    classname="org.apache.catalina.ant.jmx.JMXAccessorCreateTask" />
<typedef
    name="jmxUnregister"
    classname="org.apache.catalina.ant.jmx.JMXAccessorUnregisterTask" />
<typedef
    name="jmxEquals"
    classname="org.apache.catalina.ant.jmx.JMXAccessorEqualsCondition" />
<typedef
    name="jmxCondition"
    classname="org.apache.catalina.ant.jmx.JMXAccessorCondition" />


<target name="default">

	<property name="appName"       			value="org.modellwerkstatt.simple.o1deploy_simpleApp.App_Desktop_Order" /> 
	<property name="appVersion"    			value="0.9" /> 
	<property name="appTelemetricsName"    	value="${appName}_${appVersion}:type=ApplicationTelemetrics" /> 


<jmxOpen
    host="localhost"
    port="9005"
    ref="tomcat1"
    failOnError="true" />
 
